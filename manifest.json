{
    "manifest_version": 3,
    "name": "Three.js Memory Monitor",
    "version": "1.0",
    "description": "Monitorea el consumo de memoria en escenas de Three.js.",
    "permissions": ["scripting", "system.memory", "tabs"],
    "host_permissions": ["<all_urls>"],
    "devtools_page": "devtools.html",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    }
}
  